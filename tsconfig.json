{
  "include": [
    "./lib/**/*",
  ],
  "exclude": [
    "./node_modules"
  ],
  "compilerOptions": {
    "outDir": "./built/lib",
    "declarationDir": "./built/typings",
    "tsBuildInfoFile": "./built/buildcache",
    "resolveJsonModule": true,
    "target": "es2020",
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": [
      "es2020",
      "esnext"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "strict": true,
    "pretty": true,
    "declaration": true,
    "incremental": true
  }
}
